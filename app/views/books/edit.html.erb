<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="message-box">
    <div class="message-m"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  
  <div class="form">
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <h5>Body</h5>
    <%= f.text_field :body %>
  </div>

  <div class="form">
    <%= f.submit 'Update Book' %>
  </div>

  <p class="show-b"><%= link_to "Show", book_path(@book.id) %> | <a href="/books">Back</a></p>

<% end %>
