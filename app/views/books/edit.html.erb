<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  
  <div class="form">
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <h5>Body</h5>
    <%= f.text_field :body %>
  </div>

  <div class="form">
    <%= f.submit 'Update Book' %>
  </div>

  <p class="show-b"><%= link_to "Show", book_path(@book.id) %> | <a href="/books">Back</a></p>

<% end %>
