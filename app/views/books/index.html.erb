<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  <% end %>
</table>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <div class="form">
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>
  
  <div class="form"> 
    <h5>Body</h5>
    <%= f.text_area :body %>
  </div>

  <div class="form">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
